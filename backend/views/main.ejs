<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="ProjectFy helps you to create and manage your each individual projects, you can gather your ideas in one place, monitor and manage your progress"/>
  <meta name="theme-color" content="#181818">
  <title> 
    ProjectFy <%= (pageInfo.project !== null) ? ` | ${pageInfo.project[0].projectOverview.name}` : '' %>
  </title>

  <link rel="shortcut icon" href="/images/favicon-192x192.png" type="image/x-icon">
  <link rel="apple-touch-icon" href="/images/favicon-192x192.png" type="image/x-icon">
  
  <link rel="manifest" href="/manifest.json">

  <link rel="stylesheet" href="/css/rootHomeStyles.css">
  <!-- <#- include('./partials/rootHome_style.ejs') %> -->
  <link rel="stylesheet" href="/css/homeStyles.css">

  <script src="/js/home.root.js" type="module"></script>
  <% if(['overview', 'ideas', 'kanban'].includes(pageInfo.subSection)) { %>
  <% const src = `/js/home.${pageInfo.subSection}.js` %>
  <script src="<%= src %>" type="module"></script>
  <% } %>

  <%# 
    <!-- <script src="/js/home.overview.js" type="module"></script> -->
    <!-- <script src="/js/home.ideas.js" type="module"></script> -->
    <!-- <script src="/js/home.kanban.js" type="module"></script> -->
  %>
</head>


<body data-theme="<%= pageInfo.theme %>" data-scrolly="true">

  <div class="profy">

    <%- include('./partials/profy_titlebar.ejs') %>
    
    <% if(pageInfo.section === "project") { %>
      <%- include('./partials/profy_main.ejs') %>
    <% } %>


    <%# <other__sections> %>

    <% if(pageInfo.section === "home") { %>
      <%- include('./partials/homeSection.ejs') %>
    <% } %>
    
    <% if(pageInfo.section === "profile-settings") { %>
      <%- include('./partials/settingsSection.ejs') %>
    <% } %>

    <% if(pageInfo.section === "projects") { %>
      <%- include('./partials/projectsSection.ejs') %>
    <% } %>

    <% if(pageInfo.section === "labels") { %>
      <%- include('./partials/labelsSection.ejs') %>
    <% } %>
    
    <%# </other__sections> %>
    
    <%- include('./partials/profy_sidepanel.ejs') %>

    
    <% if(['home','profile-settings','project','labels'].includes(pageInfo.section)) { %>
      <dialog data-label-delete-modal>
        <form class="delete__label" action="" method="post">
          <div class="delete__label__header">
            <p class="delete__label__header--txt"> Delete label </p>
            <div class="delete__label__header--cancelIcon" data-label-delete-modal-close>
              <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" preserveAspectRatio="xMidYMid meet"
                viewBox="0 0 15 15">
                <rect x="0" y="0" width="15" height="15" fill="none" stroke="none" />
                <path fill="currentColor"
                  d="M3.64 2.27L7.5 6.13l3.84-3.84A.92.92 0 0 1 12 2a1 1 0 0 1 1 1a.9.9 0 0 1-.27.66L8.84 7.5l3.89 3.89A.9.9 0 0 1 13 12a1 1 0 0 1-1 1a.92.92 0 0 1-.69-.27L7.5 8.87l-3.85 3.85A.92.92 0 0 1 3 13a1 1 0 0 1-1-1a.9.9 0 0 1 .27-.66L6.16 7.5L2.27 3.61A.9.9 0 0 1 2 3a1 1 0 0 1 1-1c.24.003.47.1.64.27Z" />
              </svg>
            </div>
          </div>

          <div class="delete__label__description">
            <div class="delete__label__description__txt">
              Are you sure you want to delete <span data-label-delete-name></span> label ?
            </div>

            <div class="delete__label__description__btns">
              <button type="button" data-label-delete-modal-close>Cancel</button>
              <button type="submit">Delete</button>
            </div>
          </div>
        </form>
      </dialog>
    <% } %>

  </div>

  <%- include('./partials/bottompanel.ejs') %>


</body>

</html>
