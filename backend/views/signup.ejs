        <div class="signup__form-header">
          <h1 class="signup-text">Sign up</h1>
          New to projectfy? Create an acccount with us and get started creating new ideas.
        </div>

        <form class="signup__form" action="/signup" method="post">

          <div class="signup__form__name-wrapper">
            Name
            <section class="signup__form__name-cont">
              <input class="signup__form__name signup__form__name--first" type="text" name="firstName" spellcheck="false"
              aria-label="First name" placeholder="First name" required
              value="<%= info.firstName %>" />
              
              <input class="signup__form__name signup__form__name--last" type="text" name="lastName" spellcheck="false"
              aria-label="Last name" placeholder="Last name"
              value="<%= info.lastName %>" />
            </section>

            <div class="client-validate client-validate--name"></div>
          </div>

          <div class="signup__form__email-wrapper">
            Email address
            <input class="signup__form__email" type="email" name="emailId" spellcheck="false" autocapitalize="none"
              aria-label="email id" placeholder="name@company.com" minlength="7" required
              value="<%= info.emailId %>" />

            <div class="client-validate client-validate--email"></div>
          </div>

          <div class="signup__form__password-wrapper">
            Password 
            <section class="signup__form__password-cont">

              <input class="signup__form__password" type="password" name="password" aria-label="password"
                placeholder="Password" minlength="8" required
                value="<%= info.pwd %>"/>

              <input class="signup__form__password signup__form__password--confirm" type="password" name="confirmPassword"
              aria-label="confirm password" placeholder="Confirm" minlength="8" required
              value="<%= info.confirmPwd %>"/>

            </section>

            <div class="client-validate client-validate--pwd"></div>
            
            <% if(locals.info.error !== null) { %>
              <div class="signup__form__field--error">
                <span class="field_error-msg"> <%= info.error %> </span>
                <span class="field_error-cross">x</span>
              </div>
            <% } %>

            <label class="show-password" for="pwd-checkbox">
              <input id="pwd-checkbox" type="checkbox"/>
              <span>Show Password</span> 
            </label>

          </div>

          <button class="signup__form__submit-btn" type="submit"> Create Account </button>

        </form>

        <% if(locals.info.emailSent !== null) { %>
          <h4 class="email__sent" style="margin-block: .5rem; color: #9466ff;">
            Hold tight & check your email <%= info.emailSent %> (also spam) to confirm your account.
          </h4>
        <% } %>
          
        <footer class="signup__form--signinurl">
          Already an user?
          <a href="/signin">Sign in</a>
        </footer>

      </section>

      <figure class="signup__banner">
        <section class="signup__banner__img-wrap">
          <img class="signup__banner__img"
            src="images/signinPageBanner.webp"
            alt="signup page banner image">
        </section>

      </figure>

    </div>

    <% if(locals.info.serverError !== null) { %>
      <aside class="server-error__popup">
        <%= info.serverError %>
      </aside>
    <% } %>

